<EditForm Model="@location" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
	<div class="form-group">
		<label>Locations: </label>
		<div>
			<InputText @bind-Value="@location.Location_Gps"/>
			<ValidationMessage For="@(()=> location.Location_Gps)" />
		</div>
	</div>
    @if (!Disabled)
    {
        <button type="submit" class="btn btn-success btn-block">
            @ButtonText
        </button>

    }
    <Dating_app_final.Client.Components.BackToList Target="locations"/>

</EditForm>

@code {

	[Parameter] public bool Disabled { get; set; } = false;
	[Parameter] public Location location{ get; set; }
	[Parameter] public string ButtonText { get; set; } = "Save";
	[Parameter] public EventCallback OnValidSubmit { get; set; } 

}
