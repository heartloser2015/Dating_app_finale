<EditForm Model="@location" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="form-group">
        <label>name: </label>
        <div>
            <InputText @bind-Value="@location.name" class="form-control" />
            <ValidationMessage For="@(()=> location.name)" />
        </div>
    </div>
    <div class="form-group">
        <label>Locations: </label>
        <div>
            <InputText @bind-Value="@location.Location_Gps" />
            <ValidationMessage For="@(()=> location.Location_Gps)" />
        </div>
    </div>
    <div class="form-group">
        <label>picture: </label>
        <div>
            <InputText @bind-Value="@location.image" class="form-control" />
            <ValidationMessage For="@(()=> location.image)" />
        </div>
    </div>
    @if (!Disabled)
    {
        <button type="submit" class="btn btn-success btn-block">
            @ButtonText
        </button>

    }
    <Dating_app_final.Client.Components.BackToList Target="counter" />

</EditForm>

@code {

	[Parameter] public bool Disabled { get; set; } = false;
	[Parameter] public Location location{ get; set; }
	[Parameter] public string ButtonText { get; set; } = "Save";
	[Parameter] public EventCallback OnValidSubmit { get; set; } 

}
