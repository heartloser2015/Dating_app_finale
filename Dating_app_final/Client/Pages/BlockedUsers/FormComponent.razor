@inject HttpClient _client

<EditForm Model="@blockedUser" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
	<div class="form-group">
		<label>Cause: </label>
		<div>
			<InputText @bind-Value="@blockedUser.BUser_Cause" class="form-control"/>
			<ValidationMessage For="@(()=> blockedUser.BUser_Cause)" />
		</div>
	</div>
	
    @if (!Disabled)
    {
        <button type="submit" class="btn btn-success btn-block">
            @ButtonText
        </button>

    }
    <Dating_app_final.Client.Components.BackToList Target="blockedusers"/>

</EditForm>

@code {
	[Parameter] public bool Disabled { get; set; } = false;
	[Parameter] public BlockedUser blockedUser{ get; set; }
	[Parameter] public string ButtonText { get; set; } = "Save";
	[Parameter] public EventCallback OnValidSubmit { get; set; }

	
}
